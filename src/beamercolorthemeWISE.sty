\definecolor{WISEGrey}{RGB}{101,98,99}
\definecolor{WISELightGrey}{RGB}{201,198,199}
\definecolor{WISELighterGrey}{RGB}{221,218,219}
\definecolor{WISERed}{RGB}{196,1,9}

\definecolor{WISERed}{RGB}{187,0,17}


% =========================================================================


\setbeamercolor{structure}{fg=WISEGrey}
\setbeamercolor{normal text}{fg=WISEGrey}
\setbeamercolor{frametitle}{fg=WISEGrey}

\setbeamercolor{frame number in foot}{fg=WISEGrey}

\setbeamercolor{title}{fg=WISEGrey}
\setbeamercolor{subtitle}{fg=WISEGrey} 
\setbeamercolor{author}{fg=WISEGrey}


\setbeamercolor{section in head/foot}{fg=WISEGrey}
\setbeamercolor{subsection in head/foot}{fg=WISEGrey}

\setbeamercolor{author in head/foot}{parent=section in head/foot}
\setbeamercolor{title in head/foot}{parent=subsection in head/foot}


% =======================================================================
% alert color
\setbeamercolor{alerted text}{fg=WISERed}
% =======================================================================

% =======================================================================
% blocks
\setbeamercolor{block title}{use=structure,fg=white,bg=WISERed}
\setbeamercolor{block title example}{use=example text,fg=white,bg=WISELightGrey}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=WISERed}

\setbeamercolor{block body}        {fg=WISEGrey,use=block title,bg=WISELightGrey}
\setbeamercolor{block body alerted}{fg=WISEGrey,use=block title alerted,bg=WISELightGrey}
\setbeamercolor{block body example}{fg=WISEGrey,use=block title example,bg=WISELighterGrey}
